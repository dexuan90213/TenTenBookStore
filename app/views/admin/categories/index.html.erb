<h1 class="title">分類管理</h1>

<%= link_to '新增', new_admin_category_path, class: 'button is-primary' %>

<ul>
  <% @categories.each do |category| %>
    <li>
      <%= category.name %>
      <%= link_to '編輯', edit_admin_category_path(category) %>
      <%= link_to '刪除', admin_category_path(category), method: :delete, data: { confirm: '確定要刪除嗎？' } %>
    </li>
  <% end %>
</ul>
